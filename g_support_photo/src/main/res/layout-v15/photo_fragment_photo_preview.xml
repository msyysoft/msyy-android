<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <g.api.views.viewpager.HackyViewPager
        android:id="@+id/vp_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?gs_top_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/g_layout_top_title_v15" />

        <RelativeLayout
            android:id="@+id/rl_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">

            <CheckBox
                android:id="@+id/cb_select"
                android:layout_width="wrap_content"
                android:layout_height="?gs_top_h"
                android:checked="false"
                android:clickable="false"
                android:focusable="false" />
        </RelativeLayout>


        <g.api.views.viewpager.ViewPagerIndicator
            android:id="@+id/vpi_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:padding="5dp" />
    </RelativeLayout>

</RelativeLayout>